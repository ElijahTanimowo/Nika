<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".ScoreFragment">


    <ImageView
        android:id="@+id/nika_aSync"
        android:layout_width="135dp"
        android:layout_height="139dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/nikaSV"
        android:layout_width="387dp"
        android:layout_height="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613">

        <LinearLayout
            android:id="@+id/nikaLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/black"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/nikaScore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_score"
                android:textColor="#FFFF00"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Space
                android:id="@+id/nikaSpace1"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/nikaScore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_score"
                android:textColor="#FFFF00"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Space
                android:id="@+id/nikaSpace2"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/nikaScore3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_score"
                android:textColor="#FFFF00"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Space
                android:id="@+id/nikaSpace3"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginSetup.VerifyOTPFragment"

    android:background="@drawable/purple_gradient_wallpaperv3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nika_otp_cross_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24"
            android:padding="5dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/code_opt_landfrag"
            android:textSize="100sp"
            android:fontFamily="@font/press_start_2p"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/verification_otpFrag"
            android:textSize="24sp"
            android:fontFamily="@font/press_start_2p"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/enter_password_sent_in_your_email_otpFrag"
            android:textSize="16sp"
            android:fontFamily="@font/muli"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <com.chaos.view.PinView
            android:id="@+id/nika_pinview_otpFrag"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            style="@style/PinWidget.PinView"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:itemCount="6"
            android:itemBackground="@color/light_grey"
            app:itemRadius="10dp"
            app:itemSpacing="10dp"
            app:viewType="rectangle">

        </com.chaos.view.PinView>

        <Button
            android:id="@+id/nika_btn_otp_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/verify_code_otpFrag"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_version3_state"/>

    </LinearLayout>



</ScrollView>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginSetup.SetNewPasswordFragment"
    android:background="@drawable/purple_gradient_wallpaperv3"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nika_newPwd_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24_state"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/password_reset_icon"
            android:background="@drawable/background_pwd_icon_pwd_forgot"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_password_newpwdfrag"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginTop="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Identity has been verified \n set your new password"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/muli"
            android:gravity="center"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"/>

        <!-- Confirmation 1 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_page_password"
            app:hintTextColor="@color/white"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:startIconTint="@color/black"
            app:endIconMode="password_toggle"
            app:endIconCheckable="false"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nika_edittext_newpwd_newpwdFrag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="SpeakableTextPresentCheck"
                android:fontFamily="@font/press_start_2p"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:background="@drawable/custom_edittextbox"/>

        </com.google.android.material.textfield.TextInputLayout>


        <!-- Confirmation 2 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_page_confirm_password"
            app:hintTextColor="@color/white"
            app:boxStrokeColor="@color/black"
            android:textColorHint="@color/black"
            app:boxStrokeWidthFocused="2dp"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:startIconTint="@color/black"
            app:endIconMode="password_toggle"
            app:endIconCheckable="false"
            android:layout_marginTop="5dp"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nika_edittext_confnewpwd_newpwdFrag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="SpeakableTextPresentCheck"
                android:fontFamily="@font/press_start_2p"
                android:background="@drawable/custom_edittextbox"
                android:textColor="@color/black"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/nika_btn_ok_newpwdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/ok_newpwdfrag"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_version3_state"/>

    </LinearLayout>



</ScrollView>